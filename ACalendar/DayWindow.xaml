<Window x:Class="ACalendar.DayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ACalendar"
        mc:Ignorable="d"
        Title="DayWindow" Height="100" Width="450">
    <Grid>
        <StackPanel>
            
            <TextBlock x:Name="Day" FontSize="32" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <Grid x:Name="Trainings"/>

            <Grid x:Name="Meetings"/>

            <TextBlock x:Name="NothingHere" Text="Nothing here yet" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="30" Margin="0,-30,0,0"/>
        </StackPanel>
    </Grid>
</Window>
