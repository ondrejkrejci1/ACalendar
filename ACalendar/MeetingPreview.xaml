<Window x:Class="ACalendar.MeetingPreview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ACalendar"
        mc:Ignorable="d"
        Title="MeetingPreview" 
        Height="300"
        Width="450"
        ResizeMode="NoResize">
    <Grid>
        <TextBlock Text="Place:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" FontSize="18"/>
        <TextBlock x:Name="Place" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,45,0,0" FontSize="14"/>

        <TextBlock Text="Difficulty:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="270,20,0,0" FontSize="18"/>
        <TextBlock x:Name="Difficulty" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="270,45,0,0" FontSize="14"/>

        <TextBlock Text="Date:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,90,0,0" FontSize="18"/>
        <TextBlock x:Name="Date" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,115,0,0" FontSize="14"/>

        <TextBlock Text="Weather:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="270,90,0,0" FontSize="18"/>

        <ScrollViewer HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,115,0,0" Width="180" Height="70" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="Weather" FontSize="14" TextWrapping="Wrap" />
        </ScrollViewer>


        <TextBlock Text="Competitions:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,165,0,0" FontSize="18"/>
        <ScrollViewer  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,190,0,0"  Width="410" Height="80" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="Competitions"/>
        </ScrollViewer>

    </Grid>
</Window>
